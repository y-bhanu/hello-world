apiVersion: apps/v1
kind: Deployment
metadata:
        name: new-deployment
        labels:
                app: senthil

spec:
        replicas: 3
        selector:
                matchLabels:
                        app: senthil

        template:
                metadata:
                        name: senthil
                        labels:
                                app: senthil

                spec:
                        containers:
                        -       name: senthil-container
                                image: senthiljkumar/userapp::1.1 #image which we have in docker hub
                                ports:
                                - containerPort: 80
